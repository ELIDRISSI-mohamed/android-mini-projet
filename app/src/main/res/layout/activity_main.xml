<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
        android:background="@drawable/icon_back_main">

    <EditText
        android:id="@+id/idRegisterEmail"
        android:layout_width="358dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.342" />

    <EditText
        android:id="@+id/idRegisterPassword"
        android:layout_width="358dp"
        android:layout_height="53dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idRegisterEmail"
        app:layout_constraintVertical_bias="0.079" />
    <Button
            android:text="Login"
            android:layout_width="188dp"
            android:layout_height="48dp" android:id="@+id/idLoginBtnLogin"
            app:layout_constraintTop_toBottomOf="@+id/idRegisterPassword" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="60dp" android:layout_marginStart="24dp"/>

    <TextView
        android:id="@+id/idtextCreateCompte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="24dp"
        android:text="CrÃ©er un compte ?"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idLoginBtnLogin"
        app:layout_constraintTop_toBottomOf="@+id/idRegisterPassword" />

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="327dp"
            android:layout_height="152dp"
            android:src="@drawable/icon_umi1"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.496" app:layout_constraintBottom_toTopOf="@+id/idRegisterEmail"
            app:layout_constraintVertical_bias="0.053" android:accessibilityHeading="false"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/idTextError"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="72dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginTop="20dp"
            android:visibility="invisible" android:textColor="@android:color/holo_red_dark" android:textSize="16sp"
            android:textStyle="bold" app:layout_constraintBottom_toTopOf="@+id/idRegisterEmail"
            app:layout_constraintVertical_bias="0.0" android:layout_marginBottom="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>